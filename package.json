{
  "name": "swahili-kjv",
  "version": "0.0.8",
  "description": "swahili-kjv CLI",
  "private": false,
  "types": "build/types/types.d.ts",
  "bin": {
    "swahili-kjv": "bin/swahili-kjv"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "yarn format && yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "@vitalets/google-translate-api": "^3.0.0",
    "await-to-js": "^2.1.1",
    "chalk": "^4.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cloudscraper": "^4.6.0",
    "figlet": "^1.4.0",
    "fs-extra": "^9.0.0",
    "gluegun": "latest",
    "google-translate": "^3.0.0",
    "mariadb": "^2.3.1",
    "node-sword-interface": "^0.133.0",
    "request": "^2.88.2",
    "sequelize": "^5.21.8",
    "shelljs": "^0.8.4",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "jest": "^24.1.0",
    "prettier": "^1.12.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
